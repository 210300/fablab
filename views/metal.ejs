<%- include('partials/header.ejs')  %>
<div class="container" style="margin: 25px;padding: 126px;">
    <h1 style="text-align: center;height: -27px;padding: -20px;margin: -55px; font-family: 'montserrat', sans-serif; font-size: 2.8rem;"><b>Carpentry Lab</b></h1>
</div>

    <section style="margin: -30px; margin-left: 2rem; margin-right: 2rem;">
        <div class="container" style="margin-top: -120px;">
            <div class="row">
                <% if(data.length){
                    for(var u = 0; u< data.length; u++) {%>  
                <div class="col-auto col-sm-12 col-md-12 col-lg-4 col-xl-4" style="padding-top: 15px;padding-bottom: 15px;padding-right: 15px;padding-left: 15px;">
                    <div class="bg-light border rounded shadow card" data-bss-hover-animate="pulse"><img class="card-img-top" src="/imageEquipments/<%= data[u].image %>" height="250px;">
                        <div class="card-body">
                            <h4 class="card-title" style="font-family: bell;color: black;"><%= data[u].equipmentName %></h4><p id="fifty-chars" style="width: 38ch;overflow: hidden; white-space: nowrap;text-overflow: ellipsis">
                                <%= data[u].description %></p><a href="/equipment/<%= data[u].id %>" class="joinbtn">Read more</a>
                        </div>
                    </div>
                </div>
                <% }
                                     
            }else{ %>
                <tr>
                   <td colspan="3">No Machines Found</td>
                </tr>
             <% } %> 
            
               
            </div>
        </div>
    </section>
    
<%- include('partials/footer.ejs')  %>
</body>

</html>